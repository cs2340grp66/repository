<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_personal_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.weichen.water_report.controllers.PersonalProfileActivity">

    <TextView
        android:text="@string/personal_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="62dp"
        android:id="@+id/username_output"
        tools:ignore="HardcodedText,UnknownId"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="18sp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="53dp"
        android:id="@+id/userPhone_output"
        android:layout_below="@+id/userClass_output"
        android:layout_alignLeft="@+id/userClass_output"
        android:layout_alignStart="@+id/userClass_output"
        tools:ignore="HardcodedText"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="18sp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:id="@+id/userEmail_output"
        android:layout_below="@+id/username_output"
        android:layout_alignLeft="@+id/username_output"
        android:layout_alignStart="@+id/username_output"
        tools:ignore="HardcodedText"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="18sp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:id="@+id/userClass_output"
        android:layout_below="@+id/userEmail_output"
        android:layout_alignLeft="@+id/userEmail_output"
        android:layout_alignStart="@+id/userEmail_output"
        tools:ignore="HardcodedText"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="18sp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:id="@+id/userAdress_output"
        android:layout_below="@+id/userPhone_output"
        android:layout_alignLeft="@+id/userPhone_output"
        android:layout_alignStart="@+id/userPhone_output"
        tools:ignore="HardcodedText"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="18sp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="?attr/actionModeCloseDrawable"
        android:layout_marginRight="35dp"
        android:layout_marginEnd="35dp"
        android:id="@+id/goBack_from_personal_profile"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toLeftOf="@+id/textView2"
        tools:ignore="ContentDescription,RtlHardcoded,UnknownId"
        android:onClick= "goBack_from_personal_profile"/>

    <Button
        android:text="Edit Profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="27dp"
        android:id="@+id/edit_profile_button"
        tools:ignore="HardcodedText"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick= "edit_profile"/>
</RelativeLayout>
